<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonStyle">
        <item name="android:background">@drawable/button_next_background</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>

    <style name="bottomMenuStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/blue</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemIconTint">@drawable/bottom_menu_selector</item>
        <item name="itemIconSize">28dp</item>
        <item name="itemTextColor">@android:color/transparent</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <style name="tabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@drawable/tab_text_color_selector</item>
        <item name="tabBackground">@drawable/tab_background_selector</item>
        <item name="tabMode">scrollable</item>
        <item name="tabMinWidth">138dp</item>
        <item name="tabMaxWidth">200dp</item>
        <item name="tabTextAppearance">@style/tabTextStyle</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabIndicator">@null</item>
    </style>

    <style name="tabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/gilroy_light</item>
    </style>
</resources>